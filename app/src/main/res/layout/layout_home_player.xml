<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/view_player"
              android:layout_width="match_parent"
              android:layout_height="53dp"
              android:background="@drawable/main_play_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="20dp"
              android:paddingRight="10dp"
              android:visibility="gone"
              tools:visibility="visible"
    >

    <View
        android:layout_width="53dp"
        android:layout_height="2dp"
        android:layout_marginRight="20dp"
        />

    <internet.com.larkmusic.view.MyTextView
        android:id="@+id/tv_song"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:text="Where have you gone"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/text_666"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/iv_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_home_play"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_home_next"
        />

    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_home_list"
        />
</LinearLayout>